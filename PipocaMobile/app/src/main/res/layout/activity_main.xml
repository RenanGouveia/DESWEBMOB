<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.usjt.deswebmob.pipoca_mobile.MainActivity">

    <TextView
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerGenero"
        android:layout_marginEnd="-82dp"
        android:layout_toStartOf="@+id/spinnerGenero"
        android:text="@string/lblGenero"
        android:textColor="#000"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerGenero"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:entries="@array/generos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:onClick="listarFilmes"
        android:text="@string/btn_busca" />

</RelativeLayout>